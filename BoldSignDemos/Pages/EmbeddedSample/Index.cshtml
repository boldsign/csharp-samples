@page
@model BoldSign.Demos.Pages.EmbeddedSample.IndexModel
@{
    var sampleList = Model.BoldSignDemoViewModel.SamplesLists;
    var formData = Model.BoldSignDemoViewModel.EmbeddedTemplate;
    var embeddedsample = sampleList.Where(x => x.Id == 7 && x.IsDisplayCard).FirstOrDefault();
    ViewBag.Title = embeddedsample.Name + " - BoldSign API Demo";
}

<div class="bs_font_family create-doc-api">
    <div class="pb_32 bs_crump pt_116">
        <span><a class="fw-500 text-decoration-none bs_color_0565FF fs-16 lh_20 bs_ff_normal pr_12" href="/">API Demos </a></span><span class="bs_color_141D30 fs-14"> > </span><span class="fs-16 lh_20 bs_color_666E80 pl_12">Embedded Request </span>
    </div>
    <h2 class="pb_16 fs_24 lh_30 bs_font_family bs_color_141D30">@embeddedsample.Name</h2>
    <p class="pb_45 fs-14 bs_color_666E80 mb-0 max_w_900 ls-32">@Html.Raw(embeddedsample.Description)</p>
    <div class="lh_19 fw-500 pb_32 fs-16 bs_color_141D30">Fill the details!</div>
    <form method="post" asp-page-handler="Send" asp-page="/EmbeddedSample/Send">
        <div class="mb_20">
            <label for="TemplateId" class="bs_color_333333 fs-16 lh_19 fw-500">TemplateID</label>
            <input name="TemplateId" id="templateId" asp-for="@formData.TemplateId" placeholder="Enter the templateId"
                   class="form-control bs_text_box w_500 h_40" required />
            <div class="fs-12 text-md-right w_500 p-1">ID of a template created in <a class="text-decoration-none" href="https://app.boldsign.com">BoldSign Web App</a></div>
        </div>
        <div class="mb_20">
            <label for="SignerName" class="bs_color_333333 fs-16 lh_19 fw-500">Signer Name </label>
            <input name="SignerName" id="signerName" asp-for="@formData.SignerName" placeholder="Enter the signer name"
                   class="form-control bs_text_box w_500 h_40" required />
        </div>
        <div class="mb_20">
            <label for="SignerEmail" class="bs_color_333333 fs-16 lh_19 fw-500">Email ID</label>
            <input name="SignerEmail" id="signerEmail" asp-for="@formData.SignerEmail" placeholder="Enter the signer email ID"
                   class="form-control bs_text_box w_500 h_40" required />
       </div>
        <div class="mb_20">
            <label for="PostalAddress" class="bs_color_333333 fs-16 lh_19 fw-500">Postal Address</label>
            <input name="PostalAddress" id="signerAddress" asp-for="@formData.PostalAddress" placeholder="Enter the signer address"
                   class="form-control bs_text_box w_500 h_40" required />
        </div>
        <div class="mb_20">
            <label for="State" class="bs_color_333333 fs-16 lh_19 fw-500">State</label>
            <input name="State" id="signerState" asp-for="@formData.State" placeholder="Enter the signer state"
                   class="form-control bs_text_box w_500 h_40" required />
        </div>
        <div class="mb_20">
            <label for="PostalCode" class="bs_color_333333 fs-16 lh_19 fw-500">Postal Code</label>
            <input name="PostalCode" id="signerPostalCode" asp-for="@formData.PostalCode" placeholder="Enter the signer postalcode"
                   class="form-control bs_text_box w_500 h_40" required />
        </div>
        <div class="text-center w_500">
            <input class="btn btn-primary btn_bg w_500 h_40 bs_color_FFFFFF fs-16 lh_20 w_fill" type="submit" value="Submit" />
        </div>
    </form>
</div>

<div class="bs-vs-seprator border-none mb_32"></div>
<div class="bs_color_141D30 fs_24 lh_30 pb_32 pl_20 fw-500">Other Demos</div>
<partial name="~/Pages/Partial/ListCards.cshtml" model="@sampleList.Where(x => x.Id != 7 && x.IsDisplayCard)" />
